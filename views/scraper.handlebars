<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Scrape and Comment</h1>
        <hr class="my-4">
        <button type="button" class="btn btn-success btn-lg drkbtn" id="scrapeBtn">Scrape Articles</button>
    </div>
</div>

<div class="container">
    <h1 class="display-4">Articles</h1>
    <div id="articles"></div>
</div>

<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="comments-header">Comments</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="write-comment"></div>
                <hr>
                <div id="comments"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

