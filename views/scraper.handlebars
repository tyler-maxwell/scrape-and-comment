<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Scrape and Comment</h1>
        <hr class="my-4">
        <button type="button" class="btn btn-success btn-lg drkbtn" id="scrapeBtn">Scrape Articles</button>
    </div>
</div>

<div class="container">
    <h1 class="display-4">Articles from <a href="https://theconversation.com/us">The Conversation</a></h1>
    <div id="articles"></div>
</div>

<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="comments-header">Comments</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="write-comment">
                    <form>
                        <div class="form-group">
                            <input id='username-input' name='username' placeholder="username">
                        </div>
                        <div class="form-group">
                            <textarea id='bodyinput' name='body' placeholder="type your comment here"></textarea>
                        </div>
                    </form>
                    <button class="btn btn-success" data-id='' id='save-comment'>Submit Comment</button>

                </div>
                <hr>
                <div id="comments"></div>
            </div>
        </div>
    </div>
</div>

<script src="js/app.js"></script>